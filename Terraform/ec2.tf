resource "aws_instance" "web" {
  ami           = var.amiId
  instance_type = var.instance_type
  key_name = var.KeyName
  tags = {
    Name = var.tagName
  }
  depends_on = [ aws_key_pair.deployer ]
  count =2
}

resource "aws_key_pair" "deployer" {
  key_name   = var.KeyName
  public_key = "ssh-rsa  email@example.com"
}